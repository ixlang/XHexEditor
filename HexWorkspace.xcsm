class HexWorkspace : QXMdiArea{

	QXStatusBar statusbar;
    bool bQuit = false;
	HexWorkspace(){
		super(0);
    }

    
    
	void doOpen(){
		String file = QXFileDialog.getOpenFileName("打开文件","","*.*",this);
        if (file != nilptr && file.length() != 0){
			XEditorView view = (XEditorView)createSubWnd(true);
            view.open(file);
        }
    }
    
    QXMdiSubWindow createSubWnd(bool bshow){
        XEditorView wnd = new XEditorView(this);
        if (wnd.create(this)){
			
            if (bshow){
                //setViewMode(TabbedView);
                wnd.show();
            }
            return wnd;
        }
        return nilptr;
    }
    
    void selfont(){
		XEditorView wnd = (XEditorView)currentSubWindow();
        if (wnd != nilptr){
			String font = QXFontDialog.getFontDialog("选择字体","",this);
            wnd.setFont(QXFont.loadFromString(font));
        }
    }
    
    void init(){
		new Thread(){
			void run()override{
				while (bQuit == false){
					sleep(500);
                    synchronized(this){
						if (bQuit){
							break;
						}
						XEditorView wnd = (XEditorView)currentSubWindow();
						if (wnd != nilptr){
							wnd.flashCaret();
						}
                    }
				}
            }
        }.start();
    }
    
    void setStatusBar(QXStatusBar sb){
		statusbar = sb;
    }
    
    
    void closeWorkspace(){
		synchronized(this){
			bQuit = true;
		}
    }
    
    void showStatus(String text){
		statusbar.showMessage(text);
    }
};